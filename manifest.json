{
    "name": "Komikas",
    "version": "1.10",
    "description": "Will fix the font to meet your needs!\nPataisome jums šriftą",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "64": "icons/icon64.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Komikas settings",
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "webRequest",
        "<all_urls>",
        "storage",
        "webRequestBlocking"
    ],
    "web_accessible_resources": [
        "*.png",
        "*.gif"
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "komikas@lelesius.eu"
        }
      }
      
}